<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <include
        android:id="@+id/messageToolbar"
        layout="@layout/message_toolbar" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <RelativeLayout
                android:layout_width="380dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="45dp"
                android:paddingLeft="15dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="15dp"
                tools:layout_editor_absoluteY="116dp">


                <ImageView
                    android:id="@+id/monitImg"
                    android:layout_width="67dp"
                    android:layout_height="67dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="17dp"
                    android:background="@mipmap/scout"
                    android:contentDescription="TODO"
                    tools:srcCompat="@mipmap/ic_launcher_round" />

                <TextView
                    android:id="@+id/monitTotem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/monitName"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/monitImg"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="Totem du moniteur " />

                <TextView
                    android:id="@+id/monitName"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/monitImg"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="Nom du moniteur" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="379dp"
                android:layout_height="422dp"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="254dp">

                <EditText
                    android:id="@+id/postText"
                    android:layout_width="356dp"
                    android:layout_height="130dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="22dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="270dp"
                    android:autofillHints=""
                    android:background="@color/fui_transparent"
                    android:gravity="top|left"
                    android:hint="@string/exprimez_vous"
                    android:inputType="textMultiLine"
                    android:maxLines="15"
                    android:minLines="5"
                    android:scrollbars="vertical"
                    android:singleLine="true"
                    tools:text="Contenu du message " />

                <Button
                    android:id="@+id/publier"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="238dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginBottom="190dp"
                    android:backgroundTint="@color/vert"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="@string/publier"
                    android:textColor="@color/blanc"
                    android:textSize="13sp" />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>








</LinearLayout>