<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#E7F4F0"
    android:orientation="vertical"

    tools:context="com.example.animapp.MainActivity">


  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text=""
      android:textSize="4dp"/>


  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#FFFFFF"
      android:paddingLeft="4dip"
      android:paddingRight="4dip"
      >
    <ImageView
        android:id="@+id/imgprof"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_profil" />

 <EditText
     android:id="@+id/edit"
     android:layout_marginLeft="2dp"
     android:paddingLeft="2dp"
     android:layout_width="180dp"
     android:layout_height="60dp"
     android:scrollHorizontally="true"
     android:autoText="true"

    android:layout_toRightOf="@id/imgprof"
      />

 <Button
     android:id="@+id/publier"
     android:paddingLeft="2dp"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="Publier"
     android:textSize="20sp"
     android:background="#098174"
     android:textStyle="bold"
     android:layout_toRightOf="@id/edit"
     android:layout_alignBottom="@id/edit"
     android:layout_marginLeft="2dp"

     />
 <TextView
     android:layout_width="match_parent"
     android:layout_height="wrap_content"

     android:freezesText="true"
     android:textSize="6dp"
     android:layout_below="@id/imgprof"
     />
<!--android:text=""-->

<TextView
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:text=""
   android:textSize="4dp"
    android:background="#E7F4F0"
    android:layout_below="@id/imgprof" />


      <ListView
          android:id="@+id/list"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="50dp"
          android:layout_marginRight="20dp" />



  </RelativeLayout>


<android.support.design.widget.BottomNavigationView
   android:id="@+id/BottomNav"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:layout_alignParentBottom="true"
   app:itemBackground="@color/colorAccent"
   app:itemIconTint="@drawable/bottom_nav"
   app:itemTextColor="@drawable/bottom_nav"
   app:menu="@menu/bottom_nav_menu"></android.support.design.widget.BottomNavigationView>

<LinearLayout
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:gravity="center"
   android:orientation="vertical">
