<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.animapp.Activities.PostCommentaires"
    android:orientation="vertical">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@color/blanc" />
    <LinearLayout
        android:id="@+id/layout_chatbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_weight="0"
        android:background="@drawable/rounded_comment_sendingbox"
        android:backgroundTint="#F8F8F8"
        android:elevation="2dp"
        android:minHeight="48dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/add"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_add"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/commentaire"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="Entrer votre message"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:maxLines="6"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/commenter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/ic_send"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:textSize="14sp" />

    </LinearLayout>
    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/bottomSheetParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/bleuBlanc"
        android:orientation="vertical">
        <!-- Adding bottom sheet after main content -->
        <include layout="@layout/bottom_sheet_pop_up" />



    </android.support.design.widget.CoordinatorLayout>


</LinearLayout>