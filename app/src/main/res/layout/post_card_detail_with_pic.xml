<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parent"
    android:elevation="0dp"
    android:layout_marginTop="15dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/moniPhoto"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.022"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/cardMoniteur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:text="Nom du moniteur"
            android:textColor="@color/fui_bgGitHub"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/moniPhoto"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cardDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toEndOf="@+id/moniPhoto"
            app:layout_constraintTop_toBottomOf="@+id/cardMoniteur"
            tools:text="Date du post" />

        <TextView
            android:id="@+id/cardMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.052"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/moniPhoto"
            app:layout_constraintVertical_bias="0.037"
            tools:text="Message du post" />

        <com.sdsmdg.harjot.vectormaster.VectorMasterView
            android:id="@+id/heart_vector"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardImage"
            app:layout_constraintVertical_bias="1.0"
            app:vector_src="@drawable/ic_heart"
            tools:ignore="MissingConstraints" />


        <TextView
            android:id="@+id/nbrLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/heart_vector"
            tools:text="nbrLike" />


        <RelativeLayout
            android:id="@+id/commentaire"
            android:layout_width="165dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="2dp"
            android:clickable="true"

            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardImage"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/imageButton"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="128dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="11dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="0dp"
                android:background="@color/transparent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_comment" />

            <TextView
                android:id="@+id/nbrCommentaires"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="6dp"
                android:text="Nbr"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/imageButton" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="1dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="38dp"
                android:layout_marginBottom="6dp"
                android:layout_toEndOf="@+id/nbrCommentaires"
                android:gravity="center"
                android:text="Commentaires"
                app:layout_constraintEnd_toStartOf="@+id/imageButton" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/cardImage"
            android:layout_width="0dp"
            android:layout_height="260dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardMessage"
            tools:srcCompat="@drawable/logo" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
